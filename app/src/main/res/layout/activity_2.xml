<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity2">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingTop="15sp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/EditNum1" android:hint="Numero 1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/EditNum2" android:hint="Numero 2" android:paddingTop="10sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="211dp" android:paddingTop="75sp">
            <Button
                    android:text="Seleccione OperaciÃ³n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/BtnSeleccionOperacion"
                    android:onClick="StartActivity3"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingTop="0sp" android:paddingBottom="15sp">
            <TextView
                    android:text="Operacion:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/TextVOperacion" android:height="100px"
                    android:textSize="25sp"/>
            <TextView
                    android:text="Resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/TextVResultado"
                    android:layout_marginTop="50px"
                    android:height="100px" android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Roerto Perdomo Aragon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="16sp"/>
            <TextView
                    android:text="2946452013"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>