<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity2">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/EditNum1" android:hint="Numero 1"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/EditNum2" android:hint="Numero 2"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="211dp" android:paddingTop="75sp">
            <Button
                    android:text="Seleccione OperaciÃ³n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/BtnSeleccionOperacion"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingTop="0sp">
            <TextView
                    android:text="Operacion:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/TextVOperacion" android:height="100px"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/TextVResultado"
                    android:layout_marginTop="50px"
                    android:height="100px" android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>